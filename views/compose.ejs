<%- include("partials/header"); -%>

    <h1>Compose</h1>

    <form action="/compose" method="post">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" placeholder="Title" name="postTitle">

            <label>Post</label>
            <textarea  rows="5" cols="30" class="form-control" placeholder="Type here"
                name="postBody"></textarea>

        </div>
        <button type="submit" class="btn btn-primary" name="button">Publish</button>

    </form>


